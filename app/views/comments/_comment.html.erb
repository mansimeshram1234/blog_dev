
<div class ="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= comment.name %> </strong></p>
		<p class="comment_body"><%= comment.body %> </p>

     
<p class="comment_time"><%= time_ago_in_words(comment.created_at) rescue nil %> Ago</p>
		<%= form_for "comment", url: mycomment_path(comment.id) do |f| %>
	        <% if  user_signed_in? %>
				<%= f.text_field :body %>
				
				<%= f.submit "Reply" %>
			<% end %>
		<% end if comment.persisted? %>
  <p>
		<% comment.comments.each do |comment| %>
		<%= comment.body %>
	
	</p>
	
			<p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
		<% end %>
		
	</div>







<% if user_signed_in? %>

	<p> <%= link_to 'Delete', [@post,comment],
	                        method: :delete,
	                        class: "button",

	                       data: { confirm: 'Are you sure?'}  %> 
	   </p>



	   <% end %>


	   <div class="com"> 


	   </div>
</div>
